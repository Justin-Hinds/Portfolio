<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vertical_space_content_areas"
    android:elevation="@dimen/cardview_default_elevation">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/vertical_space_content_areas"
    android:paddingTop="@dimen/vertical_space_content_areas">

    <TextView
        android:id="@+id/textView_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month"
        android:textSize="@dimen/body_text_size"
        app:layout_constraintEnd_toEndOf="@+id/textView_weekday"
        app:layout_constraintStart_toStartOf="@+id/textView_weekday"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/title_text_size"
        android:text="@string/date"
        app:layout_constraintEnd_toEndOf="@+id/textView_month"
        app:layout_constraintStart_toStartOf="@+id/textView_month"
        app:layout_constraintTop_toBottomOf="@+id/textView_month" />

    <TextView
        android:id="@+id/textView_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/start_end_margin"
        android:layout_marginBottom="@dimen/vertical_space_content_areas"
        android:textSize="@dimen/body_text_size"
        android:text="@string/weekday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_date" />

    <TextView
        android:id="@+id/textView_scheduled_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/body_text_size"
        android:layout_marginEnd="@dimen/start_end_margin"
        android:text="@string/time"
        app:layout_constraintBottom_toBottomOf="@+id/textView_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_date" />
</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>