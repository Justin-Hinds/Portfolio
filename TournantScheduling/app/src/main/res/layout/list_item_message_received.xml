<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_space_content_areas"
        android:layout_marginStart="@dimen/start_end_margin"
        android:background="@drawable/rounded_rectangle_darkblue"
        android:padding="8dp"
        android:text="Text goes here"
        android:textColor="@color/colorIcons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="@dimen/vertical_space_content_areas"
            android:text="12:00"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/message_text"
            app:layout_constraintStart_toStartOf="@id/message_text"/>
</android.support.constraint.ConstraintLayout>