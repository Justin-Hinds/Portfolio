<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:transitionName="rowName"
        app:cardElevation="6dp"
        android:layout_marginBottom="@dimen/cardview_default_elevation">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_person_outline_black_24dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profile_icon"
                android:layout_marginStart="16dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="player name"
                app:layout_constraintLeft_toRightOf="@+id/profile_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <ImageButton
                android:id="@+id/comments_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_toStartOf="@+id/up_button"
                android:layout_below="@+id/imageView"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="32dp"
                android:background="@drawable/custom_ripple"
                android:src="@mipmap/comments_icon"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageButton
                android:id="@+id/up_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/up_vote_icon"
                android:background="@drawable/custom_ripple"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintLeft_toRightOf="@+id/comments_button"
                app:layout_constraintRight_toLeftOf="@+id/down_button"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.501" />

            <ImageButton
                android:id="@+id/down_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@mipmap/down_vote_icon"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/imageView"
                android:layout_toEndOf="@+id/up_button"
                android:layout_marginStart="32dp"
                android:background="@drawable/custom_ripple"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/post_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post text"
                android:layout_below="@id/profile_icon"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_icon" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp"
                android:layout_below="@id/post_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/post_textview"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/player_name"
                android:layout_below="@+id/player_name"
                android:text="time"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/player_name"
                app:layout_constraintLeft_toLeftOf="@+id/player_name" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>